
@{
    Layout = null;
}
@model MVCBlog.Areas.Admin.Models.DTO.LoginModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<style type="text/css">
    .form-control {
        width: 170px;
    }
</style>
<body>
    @using (Html.BeginForm("Index", "Login"))
    {
        <div>
            @Html.ValidationSummary()
            <table>
                <tr>
                    <td>Email</td>
                    <td>@Html.TextBoxFor(x=>x.EMail, new { @clas="form-control",@placeholder="EMail" })</td>
                    <td>@Html.ValidationMessageFor(x => x.EMail) </td>
                </tr>
                <tr>
                    <td>Password</td>
                    <td>@Html.TextBoxFor(x => x.Password, new { @class="form-control", @placeholder="Password"})</td>
                    <td>@Html.ValidationMessageFor(x=>x.Password) </td>
                </tr>
                <tr>
                    <td></td>
                    <td><button type="submit">Giriş Yap!</button></td>
                </tr>
            </table>
        </div>
    }

</body>
</html>
